<div class="row">
  <main class="col-md-12">
    <br />
    <h2>{{student.firstName}}
      {{student.lastName}}
      - Student:
      {{student.studentNum}}</h2>
    <hr />

    <form method="post" action="/student/update">
      <input type="hidden" name="studentNum" value="{{student.studentNum}}" />

      <fieldset>
        <legend>Personal Information</legend>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>First Name:</label>
              <input
                class="form-control"
                name="firstName"
                type="text"
                value="{{student.firstName}}"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Last Name:</label>
              <input
                class="form-control"
                name="lastName"
                type="text"
                value="{{student.lastName}}"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Email:</label>
              <input
                class="form-control"
                name="email"
                type="email"
                value="{{student.email}}"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Address (Street):</label>
              <input
                class="form-control"
                name="addressStreet"
                type="text"
                value="{{student.addressStreet}}"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Address (City):</label>
              <input
                class="form-control"
                name="addressCity"
                type="text"
                value="{{student.addressCity}}"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Address (Province):</label>
              <input
                class="form-control"
                name="addressProvince"
                type="text"
                value="{{student.addressProvince}}"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group" style="display: flex; gap: 10px">
              <label>TA:</label>
              <input
                class="form-control"
                name="TA"
                type="checkbox"
                {{#if student.TA}}value{{/if}}
                {{#if student.TA}}checked{{/if}}
                style="height: 20px !important; width: 20px"
              >Teaching Assistant</input>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group" style="display: flex; gap: 10px">
              <label>Status:</label>
              <input
                class="form-control"
                name="status"
                type="radio"
                value="Full Time"
                {{#equal student.status "Full Time" }} checked {{/equal}}
                style="height: 20px !important; width: 20px"
              >Full-time</input>
              <input
                class="form-control"
                name="status"
                type="radio"
                value="Part Time"
                {{#equal student.status "Part Time" }} checked {{/equal}}
                style="height: 20px !important; width: 20px"
              >Part-time</input>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Course:</label>
              <select name="course">
                <option value="1" {{#equal student.course "1" }} selected {{/equal}}>1</option>
                <option value="2" {{#equal student.course "2" }} selected {{/equal}}>2</option>
                <option value="3" {{#equal student.course "3" }} selected {{/equal}}>3</option>
                <option value="4" {{#equal student.course "4" }} selected {{/equal}}>4</option>
                <option value="5" {{#equal student.course "5" }} selected {{/equal}}>5</option>
                <option value="6" {{#equal student.course "6" }} selected {{/equal}}>6</option>
                <option value="7" {{#equal student.course "7" }} selected {{/equal}}>7</option>
                <option value="8" {{#equal student.course "8" }} selected {{/equal}}>8</option>
                <option value="9" {{#equal student.course "9" }} selected {{/equal}}>9</option>
                <option value="10" {{#equal student.course "10" }} selected {{/equal}}>10</option>
                <option value="11" {{#equal student.course "11" }} selected {{/equal}}>11</option>
               </select>
            </div>
          </div>
        </div>
      </fieldset>
      <hr />
      <input
        type="submit"
        class="btn btn-primary float-right"
        value="Update Student"
      /><br /><br /><br />
    </form>
  </main>
</div>