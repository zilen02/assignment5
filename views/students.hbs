<div class="row">
  <div class="col-md-12">
    <br />
    <h2>Students</h2>
    <hr />

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Student Num</th>
          <th scope="col">Full Name</th>
          <th scope="col">Email</th>
          <th scope="col">Address</th>
          <th scope="col">Status</th>
          <th scope="col">Course ID</th>
        </tr>
      </thead>
      <tbody>
        {{#each students}}
          <tr>
            <td>
              {{studentNum}}
            </td>
            <td>
              <a href="/student/{{studentNum}}">
                {{firstName}}
                {{lastName}}
              </a>
            </td>
            <td>
              <a href="mailto:{{email}}">{{email}}</a>
            </td>
            <td>
              {{addressStreet}}
            </td>
            <td>
              {{status}}
            </td>
            <td>
              <a href="/students/{{course}}">
                {{course}}
              </a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    {{#unless students}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/unless}}
  </div>
</div>