<div class="row">
  <main class="col-md-12">
    <!-- Start your code here -->
    <div class="mainsection">
      <form method="post" action="/studentss/add">
        <fieldset>
          <legend class="h3">Personal Information</legend>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label>First Name:</label>
                <input class="form-control" name="firstName" type="text" />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label>Last Name:</label>
                <input class="form-control" name="lastName" type="text" />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label>Email:</label>
                <input class="form-control" name="email" type="email" />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Address (Street):</label>
                <input class="form-control" name="addressStreet" type="text" />
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Address (City):</label>
                <input class="form-control" name="addressCity" type="text" />
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Address (Province):</label>
                <input
                  class="form-control"
                  name="addressProvince"
                  type="text"
                />
              </div>
            </div>
          </div>
        </fieldset>
        <fieldset>
          <legend class="h3">Academic Information</legend>
          <div class="row">
            <div class="col-md-4">
              <label>College Employment:</label><br />
              <div class="form-check">
                <input
                  class="form-check-input"
                  name="TA"
                  type="checkbox"
                  id="TA"
                />
                <label class="form-check-label" for="TA">
                  Teaching Assistant
                </label>
              </div>
              <br />
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Enrollment Status:</label><br />
                <label class="checkbox-inline">
                  <input type="radio" name="status" value="Full Time" />
                  Full Time
                </label>
                <label class="checkbox-inline">
                  <input type="radio" name="status" value="Part Time" />
                  Part Time
                </label>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label for="course">Enrolled in Course:</label>
                {{#if courses}}
                  <select class="form-control" name="course" id="course">
                    <option value="">Select Course</option>
                    {{#each courses}}
                      <option value="{{courseId}}">{{courseCode}}</option>
                    {{/each}}
                  </select>
                {{else}}
                  <div>No Courses</div>
                {{/if}}
              </div>
            </div>
          </div>
        </fieldset>
        <hr />
        <input
          type="submit"
          class="btn btn-primary float-right submit-btn"
          value="Add Student"
        /><br /><br /><br />
      </form>
    </div>

    <!-- End your code here  -->
  </main>
</div>